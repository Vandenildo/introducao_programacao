rodas = int(input("Digite a quantidade de rodas:"))
peso = float(input("Digite o peso em kilogramas: "))
pessoas = int(input("Digite a quantidade de pessoas: "))

if rodas == 2 or rodas == 3:
    print("Categoria de veiculo A")
elif rodas == 4 and pessoas <= 8 and peso <= 3500:
    print("Categoria de veiculo B")
elif rodas >= 4 and peso > 3500 and peso <= 6000:
    print("Categoria de veiculo C")
elif rodas >= 4 and pessoas >= 8:
    print("Categoria de veiculo D")
elif rodas >= 4 or peso > 6000:
    print("Categoria de veiculo E")
else :
    print("Alguma informação foi inserida errada.")
